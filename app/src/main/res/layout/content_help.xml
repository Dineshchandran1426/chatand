<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".help"
    tools:showIn="@layout/activity_help">
    <Button android:layout_height="wrap_content"
        android:layout_width="match_parent" android:text="FAQ"
        android:textAllCaps="false"
        android:gravity="left|center_vertical"
        android:background="#00FFFEFE"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="50dp"
        android:id="@+id/button"/>

    <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:text="Contact us \nQuestions? Need help?" android:textAllCaps="false" android:gravity="left|center_vertical" android:background="#00FFFEFE" android:layout_marginTop="100dp" android:layout_marginLeft="50dp" android:id="@+id/button2"/>

    <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:text="Terms and Privacy Policy" android:textAllCaps="false" android:gravity="left|center_vertical" android:background="#00FFFEFE" android:layout_marginTop="170dp" android:layout_marginLeft="50dp" android:id="@+id/button3"/>

    <Button android:layout_height="wrap_content" android:layout_width="match_parent" android:text="App info" android:textAllCaps="false" android:gravity="left|center_vertical" android:background="#00FFFEFE" android:layout_marginTop="240dp" android:layout_marginLeft="50dp" android:id="@+id/button4"/>

    <ImageView android:layout_height="62dp" android:layout_width="37dp" android:layout_marginTop="30dp" android:layout_marginLeft="0dp" android:id="@+id/imageView" app:srcCompat="@drawable/qustn"/>

    <ImageView android:layout_height="62dp" android:layout_width="37dp" android:layout_marginTop="90dp" android:layout_marginLeft="0dp" android:id="@+id/imageView2" app:srcCompat="@drawable/contacts"/>

    <ImageView android:layout_height="62dp" android:layout_width="37dp" android:layout_marginTop="160dp" android:id="@+id/imageView3" app:srcCompat="@drawable/document"/>

    <ImageView android:layout_height="62dp" android:layout_width="37dp" android:layout_marginTop="230dp" android:id="@+id/imageView5" app:srcCompat="@drawable/iconn"/>

</RelativeLayout>
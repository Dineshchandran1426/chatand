<?xml version="1.0"?>

    <RelativeLayout tools:context=".changenum1"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="180dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="70dp"
        app:srcCompat="@drawable/tick2" />

    <TextView
        android:id="@+id/text_id"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_below="@+id/imageView2"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:gravity="start"
        android:text="@string/changenum1"
        android:textAlignment="viewStart"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/text_id1"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_below="@+id/text_id"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:gravity="start"
        android:text="@string/changenum2"
        android:textAlignment="viewStart"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/text_id2"
        android:layout_width="330dp"
        android:layout_height="50dp"
        android:layout_below="@+id/text_id1"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:gravity="start"
        android:text="@string/changenum3"
        android:textAlignment="viewStart"
        android:textSize="15sp" />

    <Button
        android:id="@+id/b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_id2"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="195dp"
        android:background="#034da2"
        android:text="Next"
        android:textColor="@android:color/background_light"
        android:textSize="15sp"
        android:typeface="normal" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main3Activity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

    <AbsoluteLayout
        android:id="@+id/absoluteLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_x="2dp"
            android:layout_y="71dp"
            android:src="@drawable/us" />

        <ImageView
            android:id="@+id/img2"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_x="20dp"
            android:layout_y="200dp"
            android:src="@drawable/key" />

        <ImageView
            android:id="@+id/img3"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_x="20dp"
            android:layout_y="270dp"
            android:src="@drawable/chats" />

        <TextView
            android:id="@+id/name1"
            android:layout_width="700px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="62dp"
            android:layout_x="70dp"
            android:layout_y="101dp"
            android:text="Hi there i am using HaiPals"
            android:textSize="50px"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/name2"
            android:layout_width="700px"
            android:layout_height="wrap_content"
            android:layout_marginLeft="62dp"
            android:layout_x="70dp"
            android:layout_y="71dp"
            android:text="Husband"
            android:textSize="50px"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/img4"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_x="20dp"
            android:layout_y="340dp"
            android:src="@drawable/noti" />

        <ImageView
            android:id="@+id/img6"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_x="20dp"
            android:layout_y="410dp"
            android:src="@drawable/storage" />

        <ImageView
            android:id="@+id/img7"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_x="20dp"
            android:layout_y="480dp"
            android:src="@drawable/save" />

        <ImageView
            android:id="@+id/img8"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_weight="1"
            android:layout_x="20dp"
            android:layout_y="550dp"
            android:src="@drawable/invite" />

        <Button
            android:id="@+id/button"
            android:layout_width="276dp"
            android:layout_height="34dp"
            android:layout_x="78dp"
            android:layout_y="201dp"
            android:textAllCaps="false"
            android:gravity="left|center_vertical"
            android:background="#00FFFEFE"
            android:text="Account" />

        <Button
            android:id="@+id/button2"
            android:layout_width="276dp"
            android:layout_height="34dp"
            android:layout_x="76dp"
            android:layout_y="271dp"
            android:background="#00FFFEFE"
            android:textAllCaps="false"
            android:gravity="left|center_vertical"
            android:text="Chats" />

        <Button
            android:id="@+id/button3"
            android:layout_width="276dp"
            android:layout_height="34dp"
            android:layout_x="80dp"
            android:layout_y="345dp"
            android:background="#00FFFEFE"
            android:textAllCaps="false"
            android:gravity="left|center_vertical"
            android:text="Notifications" />

        <Button
            android:id="@+id/button4"
            android:layout_width="276dp"
            android:layout_height="34dp"
            android:layout_x="79dp"
            android:layout_y="409dp"
            android:background="#00FFFEFE"
            android:textAllCaps="false"
            android:gravity="left|center_vertical"
            android:text="Data and storage" />

        <Button
            android:id="@+id/button5"
            android:layout_width="276dp"
            android:layout_height="34dp"
            android:layout_x="80dp"
            android:layout_y="478dp"
            android:background="#00FFFEFE"
            android:textAllCaps="false"
            android:gravity="left|center_vertical"
            android:text="Help" />

        <Button
            android:id="@+id/button6"
            android:layout_width="276dp"
            android:layout_height="34dp"
            android:layout_x="80dp"
            android:layout_y="549dp"
            android:background="#00FFFEFE"
            android:textAllCaps="false"
            android:gravity="left|center_vertical"
            android:text="Invite a friend" />

    </AbsoluteLayout>

    <include
        layout="@layout/content_main3"
        app:layout_anchor="@+id/absoluteLayout"
        app:layout_anchorGravity="center" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
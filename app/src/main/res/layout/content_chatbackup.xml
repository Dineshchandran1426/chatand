<?xml version="1.0"?>

   <RelativeLayout tools:context=".chatbackup" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="70dp"
        android:drawableLeft="@android:drawable/ic_menu_upload_you_tube"
        android:drawablePadding="10dp"
        android:text="Last Backup"
        android:textColor="#034da2"
        android:textSize="15sp"
        android:textStyle="bold"
        android:id="@+id/text_id01" />

 <TextView
     android:id="@+id/text_id02"
     android:layout_width="300dp"
     android:layout_height="80dp"
     android:layout_below="@id/text_id01"
     android:layout_marginLeft="50dp"
     android:layout_marginTop="20dp"
     android:drawablePadding="10dp"
     android:text="@string/backup1"
     android:textSize="15sp" />

 <TextView
     android:id="@+id/text_id03"
     android:layout_width="300dp"
     android:layout_height="20dp"
     android:layout_below="@id/text_id02"
     android:layout_marginLeft="50dp"
     android:layout_marginTop="10dp"
     android:drawablePadding="10dp"
     android:text="Local: 02:00"
     android:textSize="15sp"
     android:textStyle="bold" />

 <TextView
     android:id="@+id/text_id04"
     android:layout_width="300dp"
     android:layout_height="20dp"
     android:layout_below="@id/text_id03"
     android:layout_marginLeft="50dp"
     android:drawablePadding="10dp"
     android:text="Google Drive: 10/8/19, 07:00"
     android:textSize="15sp"
     android:textStyle="bold" />

 <TextView
     android:id="@+id/text_id05"
     android:layout_width="300dp"
     android:layout_height="20dp"
     android:layout_below="@id/text_id04"
     android:layout_marginLeft="50dp"
     android:drawablePadding="10dp"
     android:text="Size:11 MB"
     android:textSize="15sp"
     android:textStyle="bold" />

 <Button
     android:id="@+id/b4"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_below="@id/text_id05"
     android:layout_marginLeft="50dp"
     android:layout_marginTop="20dp"
     android:background="#2673D1"
     android:text="BACK UP"
     android:textColor="@android:color/white"
     android:textSize="15sp" />

 <TextView
     android:id="@+id/text_id06"
     android:layout_width="300dp"
     android:layout_height="30dp"
     android:layout_below="@id/b4"
     android:layout_marginLeft="10dp"
     android:layout_marginTop="20dp"
     android:drawableLeft="@android:drawable/ic_menu_save"
     android:drawablePadding="10dp"
     android:text="Google Drive settings"
     android:textColor="#034da2"
     android:textSize="15sp"
     android:textStyle="bold" />

 <TextView
     android:id="@+id/text_id07"
     android:layout_width="300dp"
     android:layout_height="80dp"
     android:layout_below="@id/text_id06"
     android:layout_marginLeft="50dp"
     android:layout_marginTop="20dp"
     android:drawablePadding="10dp"
     android:text="@string/backup2"
     android:textSize="15sp" />

 <TextView
     android:id="@+id/text_id08"
     android:layout_width="300dp"
     android:layout_height="20dp"
     android:layout_below="@id/text_id07"
     android:layout_marginLeft="50dp"
     android:text="Back up to Google Drive"
     android:textSize="15sp"
     android:textStyle="bold" />

 <TextView
     android:id="@+id/text_id09"
     android:layout_width="300dp"
     android:layout_height="20dp"
     android:layout_below="@id/text_id08"
     android:layout_marginLeft="50dp"
     android:text="Daily"
     android:textSize="15sp" />

 <TextView
     android:id="@+id/text_id010"
     android:layout_width="300dp"
     android:layout_height="20dp"
     android:layout_below="@id/text_id09"
     android:layout_marginLeft="50dp"
     android:layout_marginTop="10dp"
     android:text="Google Account"
     android:textSize="15sp"
     android:textStyle="bold" />

 <TextView
     android:id="@+id/text_id11"
     android:layout_width="300dp"
     android:layout_height="20dp"
     android:layout_below="@id/text_id010"
     android:layout_marginLeft="50dp"
     android:text="praveendaas12@gmail.com"
     android:textSize="15sp" />

 <TextView
     android:id="@+id/text_id012"
     android:layout_width="300dp"
     android:layout_height="20dp"
     android:layout_below="@id/text_id11"
     android:layout_marginLeft="50dp"
     android:layout_marginTop="10dp"
     android:text="Back Up over"
     android:textSize="15sp"
     android:textStyle="bold" />

 <TextView
     android:id="@+id/text_id13"
     android:layout_width="300dp"
     android:layout_height="20dp"
     android:layout_below="@id/text_id012"
     android:layout_marginLeft="50dp"
     android:text="Wi-Fi only"
     android:textSize="15sp" />

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:textStyle="bold" android:textSize="15sp" android:text="Include videos" android:layout_marginTop="20dp" android:layout_marginLeft="50dp" android:id="@+id/text_id14" android:layout_below="@id/text_id13"/>

    <Switch android:layout_height="60dp" android:layout_width="60dp" android:layout_marginLeft="300dp" android:id="@+id/switch1" android:layout_below="@id/text_id13" android:layout_toRightOf="@+id/textView2"/>

</RelativeLayout>
<?xml version="1.0"?>

    <RelativeLayout tools:context=".chat" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">
    />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="70dp"
            android:drawableLeft="@android:drawable/ic_menu_upload"
            android:text="   Export Chat"
            android:textSize="15sp"
            android:textStyle="bold"
            android:id="@+id/textView9" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView9"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@android:drawable/arrow_down_float"
        android:drawablePadding="10dp"
        android:text="    Archieve all chats"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView10"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@android:drawable/radiobutton_on_background"
        android:drawablePadding="10dp"
        android:text="   Clear all chats"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView11"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@android:drawable/ic_menu_delete"
        android:drawablePadding="8dp"
        android:text="Delete all chats"
        android:textSize="15sp"
        android:textStyle="bold" />

</RelativeLayout>
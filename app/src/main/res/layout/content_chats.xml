<?xml version="1.0"?>

    <RelativeLayout tools:context=".chats" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="70dp"
        android:text="Enter is send"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginLeft="30dp" android:textSize="15sp" android:text="Enter key will send your message" android:id="@+id/textView2" android:layout_below="@id/textView1"/>

    <Switch
        android:id="@+id/switch1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@+id/textView2" />

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginTop="20dp" android:layout_marginLeft="30dp" android:textStyle="bold" android:textSize="15sp" android:text="Media Visibility" android:id="@+id/textView3" android:layout_below="@id/textView2"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginLeft="30dp" android:textSize="15sp" android:text="@string/media" android:id="@+id/textView4" android:layout_below="@id/textView3"/>

    <Switch
        android:id="@+id/switch2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="110dp"
        android:layout_toRightOf="@+id/textView4" />

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginTop="20dp" android:layout_marginLeft="30dp" android:textStyle="bold" android:textSize="15sp" android:text="Font Size" android:id="@+id/textView5" android:layout_below="@id/textView4"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginLeft="30dp" android:textSize="15sp" android:text="Medium" android:id="@+id/textView6" android:layout_below="@id/textView5"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginTop="20dp" android:layout_marginLeft="30dp" android:textStyle="bold" android:textSize="15sp" android:text="App Language" android:id="@+id/textView7" android:layout_below="@id/textView6"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginLeft="30dp" android:textSize="15sp" android:text="Phone's Language(English)" android:id="@+id/textView8" android:layout_below="@id/textView7"/>

    <TextView android:layout_height="wrap_content" android:layout_width="wrap_content" android:layout_marginTop="20dp" android:layout_marginLeft="30dp" android:textStyle="bold" android:textSize="15sp" android:text="Wallpaper" android:id="@+id/textView9" android:layout_below="@id/textView8" android:drawableLeft="@android:drawable/ic_menu_report_image"/>

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView9"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@android:drawable/ic_menu_upload"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView10"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:drawableLeft="@android:drawable/ic_menu_recent_history"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="370dp"
        android:background="#00FFFEFE"
        android:gravity="left|center_vertical"
        android:text="Chat Backup"
        android:textAllCaps="false"
        android:textColor="#B0201E1E" />

    <Button
        android:id="@+id/button12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="420dp"
        android:background="#00FFFEFE"
        android:gravity="left|center_vertical"
        android:text="Chat History"
        android:textAllCaps="false"
        android:textColor="#B0201E1E" />
    />

</RelativeLayout>